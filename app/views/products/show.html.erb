<h1><%= @product.description %></h1>

<section id="main" class="container">
  
  <div class="left-side">
  <h4 class="lead">Product details </p>
  <dl>

    <dt>Size
      <dd><%= @product.size %>
    <dt>Condition
      <dd><%= @product.condition %>
    <dt>Brand
      <dd><%= @product.brand %>
    <dt>Price
      <dd><%= number_to_currency(@product.price) %>
    <dt>Original Price
      <dd><%= number_to_currency(@product.original_price) %>
    <dt> Discount 
      <dd> <%=  @product.discount?.to_i %> % off!
    <dt>Seller
      <dd><%= @product.seller %>
  </dl>
</div>
<div class="right-side">
  <% if @product.photo.attached? %>
    <%= image_tag @product.photo, class: "right-side-image" %>
  <% else %>
    <%= image_tag 'download.png', class: "right-side-image" %>
  <% end %>
</div>


<%= button_to "Back to products list", products_path, method: :get, class: "btn btn-primary" %>
<br>
<%= button_to "Delete this product", product_path(@product), method: :delete, class: "btn btn-danger" %>
<br>
<%= button_to 'Add to Cart', add_to_cart_cart_path(@product), method: :post %>
<br>
 <%= link_to 'View Cart', cart_path %>

</section>