#<%= @products.inspect %>
<section id="main" class="container">
  <h1 class="lead">Clothing Available for Purchase</p>
  <%= form_tag products_path, method: :get do %>
    <%= select_tag :sort_by, options_for_select(['Price: Low to High', 'Price: High to Low', 'Size: Small to Large', 'Size: Large to Small', 'Newest'],session[:sort]) %>
    <%= submit_tag 'Sort' %>
  <% end %>

  <table class="table">
    <thead>
    <tr>
        <th>Image</th>
        <th>Size</th>
        <th>Price</th>
    </tr>
    </thead>
  

    <% @products.each do |product| %>
      <tr class="product">
        <td><img src="<%= product.photo %>"></td>
        <td><%= product.size %>
        <td><%= number_to_currency(product.price) %>
        <td><%= link_to "Like this item? Click here.", product_path(product) %>
      </tr>
    <% end %>
  </table>
  <br>
  <%= link_to "Add new item", new_product_path, class: "btn btn-secondary" %>
</section>